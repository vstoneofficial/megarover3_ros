<!--
マウス（タッチパッド）操作サンプルのlaunch

rosserialを使ってROSとメガローバーを接続してから使用してください。

起動コマンド：roslaunch megarover3_ros mousectrl.launch
-->

<launch>
  <!-- マウスによる制御ノード -->
  <arg name="holonomic" default="false"/>

  <node pkg="mouse_teleop" type="mouse_teleop.py" name="mouse_teleop">
    <rosparam file="$(find megarover3_ros)/configuration_files/mouse_teleop.yaml" command="load"/>
    <param name="holonomic" value="$(arg holonomic)"/>

  </node>
  
  <node pkg="megarover3_ros" type="mouse_receiver" name="mouse_receiver" />

</launch>
